<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/base_title"/>
    <RelativeLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/base_bg"
        />

    <View 
        style="@style/gray_line1"
        />
         <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal" 
        		>

                <RadioButton
                    android:id="@+id/rb_home"
                    style="@style/HomeMenuStyle"
                    android:checked="true"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/selector_home_menu"
                    android:text="首页" />

                <RadioButton
                    android:id="@+id/rb_project"
                    style="@style/HomeMenuStyle"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/selector_message_menu"
                    android:text="找项目" />

                <RadioButton
                    android:id="@+id/rb_person"
                    style="@style/HomeMenuStyle"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/selector_message_menu"
                    android:text="找工人" />

                <RadioButton
                    android:id="@+id/rb_message"
                    style="@style/HomeMenuStyle"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/selector_find_menu"
                    android:text="资讯" />

                <RadioButton
                    android:id="@+id/rb_mine"
                    style="@style/HomeMenuStyle"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/selector_mine_menu"
                    android:text="我的" />
            </RadioGroup>

</LinearLayout>
